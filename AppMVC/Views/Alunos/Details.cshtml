@model Aluno

<h4>Preencha os dados</h4>

<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div class="form-group">
                <label class="form-label">Nome: </label>
                <input asp-for="Name" class="form-control"/>
            </div>

            <div class="form-group">
                <label class="form-label">Data de Nascimento: </label>
                <input asp-for="DataNascimento" class="form-control" />
            </div>

            <div class="form-group">
                <label class="form-label">E-Mail: </label>
                <input asp-for="Email" class="form-control" />
            </div>

            <div class="form-group">
                <label class="form-label">Confirme o E-Mail: </label>
                <input asp-for="EmailConfirmacao" class="form-control" />
            </div>

            <div class="form-group">
                <label class="form-label">Avaliação: </label>
                <input asp-for="Avaliacao" class="form-control" />
            </div>

            <div class="form-group">
                <label class="form-label">Ativo: </label>
                <input asp-for="Ativo" class="form-check-input" />
            </div>

            @* <input type="submit" value="Enviar" class="btn btn-info" /> *@
        </form>
    </div>
</div>